# ====================
# API KEYS
# ====================
OPENAI_API_KEY=your_openai_key_here
ANTHROPIC_API_KEY=your_anthropic_key_here

# XAI API (Grok)
XAI_API_KEY=your_xai_key_here

# Embedding providers (for BGE-M3 GPU-assisted embeddings)
DEEPINFRA_API_KEY=your_deepinfra_key_here

# ====================
# BLOB STORAGE (Backblaze B2)
# ====================
Bucket=your_bucket_name
Remote=b2-new
keyID=your_key_id
keyName=your_key_name
applicationKey=your_application_key

# ====================
# AZURE AD SSO CREDENTIALS
# ====================
AZURE_AD_TENANT_ID=your_tenant_id
AZURE_AD_CLIENT_ID=your_client_id
AZURE_AD_CLIENT_SECRET=your_client_secret
AZURE_AD_REDIRECT_URI=http://localhost:5173/auth/callback

# ====================
# AZURE POSTGRESQL DATABASE
# ====================
AZURE_PG_USER=your_username
AZURE_PG_PASSWORD=your_password
AZURE_PG_HOST=cogtwin.postgres.database.azure.com
AZURE_PG_PORT=5432
AZURE_PG_DATABASE=postgres
AZURE_PG_SSLMODE=require
AZURE_PG_CONNECTION_STRING=postgresql://username:password@host:5432/postgres?sslmode=require

# ====================
# FRONTEND (Railway Deployment)
# ====================
# CRITICAL: Frontend service needs this to call backend API
VITE_API_URL=https://your-backend-service.up.railway.app
