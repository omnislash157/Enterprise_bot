# CogTwin Enterprise Bot - Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# AZURE POSTGRESQL (Phase 5)
# =============================================================================
# Full connection string format
AZURE_PG_CONNECTION_STRING=postgresql://Mhartigan:Lalamoney3!@enterprisebot.postgres.database.azure.com:5432/enterprise_bot

# Alternative: Individual components (used if CONNECTION_STRING not set)
AZURE_PG_HOST=enterprisebot.postgres.database.azure.com
AZURE_PG_PORT=5432
AZURE_PG_DATABASE=enterprise_bot
AZURE_PG_USER=Mhartigan
AZURE_PG_PASSWORD=Lalamoney3!

# Alias for compatibility with various tools
DATABASE_URL=postgresql://Mhartigan:Lalamoney3!@enterprisebot.postgres.database.azure.com:5432/enterprise_bot

# =============================================================================
# DEEPINFRA API (for embeddings)
# =============================================================================
DEEPINFRA_API_KEY=your_deepinfra_api_key_here

# =============================================================================
# XAI (Grok) API (for LLM responses)
# =============================================================================
XAI_API_KEY=your_xai_api_key_here

# =============================================================================
# AZURE AD (for SSO authentication)
# =============================================================================
AZURE_AD_CLIENT_ID=your_azure_ad_client_id
AZURE_AD_CLIENT_SECRET=your_azure_ad_client_secret
AZURE_AD_TENANT_ID=your_azure_ad_tenant_id

# =============================================================================
# APPLICATION
# =============================================================================
# Server configuration
HOST=0.0.0.0
PORT=8000
LOG_LEVEL=INFO

# Deployment mode
DEPLOYMENT_MODE=enterprise  # enterprise | personal
DEPLOYMENT_TIER=basic       # basic | pro | full

# =============================================================================
# SECURITY
# =============================================================================
# Used for session encryption, JWT signing, etc.
SECRET_KEY=your_secret_key_here_use_random_string

# CORS origins (comma-separated)
CORS_ORIGINS=https://yourdomain.com,https://app.yourdomain.com

# =============================================================================
# OPTIONAL: Memory Backend Override
# =============================================================================
# Uncomment to override config.yaml memory backend setting
# MEMORY_BACKEND=postgres  # or "file"
